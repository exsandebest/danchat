<html>

<head>
   <link rel="stylesheet" type="text/css" href="style.css">
   <title>Люди</title>
   <style>
      img {
         float: left;
         margin: 10px;
         border-radius: 70px;
         width: 85px;
         height: 85px;
      }

      div.block {
         height: 100px;
         width: 275px;
         background: rgba(254, 254, 254, 0.6);
         margin: 10px;
         margin-bottom: 20px;
         border: outset 4px #20ccff;
         border-radius: 20px;
      }

      div.datablock {
         height: 65px;
         width: 150px;
         float: right;
      }


      p#fullname {
         font: normal 12px 'Arial';
         cursor: default;
      }

      a#login {
         font: bold 20px 'Trebuchet MS';
         cursor: pointer;
         width: auto;
         text-decoration: none;
      }

      span.red {
         float: left;
         margin: 0px;
         padding: 0px;
      }

      #list {
         display: inline-flex;
         flex-wrap: wrap;
         margin-left: 5%;
         justify-content: space-around;
         margin-right: 5%
      }
   </style>
</head>

<body background="bg.jpg">
   <%- include('partials/navbar.ejs') %>
   <%- include('partials/scripts.ejs') %>
   <center>
      <div id="list">

         <% people.forEach((elem)=>{%>

            <div class="block">

               <% if (elem.imgStatus) {%>
                  <img src="<%=elem.login%>.jpg">
               <%} else {%>
                  <img src="default.jpg">
               <%}%>
               <div class="datablock">
                  <br>
                  <a id="login" href="/u/<%=elem.login%>" style="color:<%=elem.color%>"><%=elem.login%></a><br>
                  <p></p>
                  <span class="green" style="font: normal 15px 'Arial';" id="fullname"><%=elem.firstname%> <%=elem.lastname%></span>
               </div>
            </div>

         <%})%>
      </div>
   </center>
   <%- include('partials/footer.ejs') %>
</body>

</html>
